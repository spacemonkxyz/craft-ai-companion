{
    "name": "spacemonk/craft-ai-companion",
    "type": "craft-plugin",
    "license": "proprietary",
    "support": {
        "email": "info@spacemonk.com"
    },
    "require": {
        "php": ">=8.0.2",
        "craftcms/cms": "^4.3.5"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "spacemonk\\ai_companion\\": "src/"
        }
    },
    "extra": {
        "handle": "craft-ai-companion",
        "name": "craft-ai-companion",
        "developer": "spacemonk",
        "documentationUrl": "",
        "class": "spacemonk\\ai_companion\\AiCompanion"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}

